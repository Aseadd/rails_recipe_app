<p style="color: green"><%= notice %></p>

<h1>general shopping list</h1>

<div id="recipe_foods">
  <% @recipes.each do |recipe| %>
    <div>
      <%= recipe.name %>
      <%= recipe.need_to_buy_ingredients_cost %>
      <br>
      <% recipe.need_to_buy_ingredients.each do |ingredient| %>
        ----<%= ingredient.food.name %>
        cost 
        <%= number_to_currency(ingredient.cost_of_need_to_buy) %>
      <% end %>

      <br>
    </div>
  <% end %>
  total: 
  <%= number_to_currency(@total_cost) %>
  
</div>
