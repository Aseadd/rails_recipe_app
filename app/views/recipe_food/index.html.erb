<p style="color: green"><%= notice %></p>
<%= stylesheet_link_tag "recipe-show"%>

<h1>general shopping list</h1>

<div id="recipe_foods" class ="shopping-item">
<div class = "cost-and-items">
  <div class="total-items">
  <p> Total Items</p>
  <%= @total_items%>
  </div>
  <div class="total-cost">
  <p> Total Cost</p>
  <%= number_to_currency(@total_cost)%>
  </div>
</div>
  <table>
    <thead>
      <tr class = "shopping-header">
        <th>Recipe</th>
        <th>Ingredient</th>
        <th>Units needeed</th>
        <th>Cost per unit</th>
        <th>Sub total</th>
      </tr>
    </thead>
    <tbody>
    
      <% @recipes.each do |recipe| %>
        <% recipe.need_to_buy_ingredients.each do |ingredient| %>
          <tr class ="shopping-content">
            <td><%= recipe.name %></td>
            <td><%= ingredient.food.name %></td>
            <td><%= ingredient.need_to_buy %></td>
            <td><%= ingredient.food.price %></td>
            <td><%= number_to_currency(ingredient.cost_of_need_to_buy) %></td>
          </tr>
        <% end %>
      <% end %>
      
    </tbody>
  </table>
</div>
