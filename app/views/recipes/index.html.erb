<%= stylesheet_link_tag "user_list"%>

<div class="container user-list">
<h1>Recipes</h1>

<div class= "add-recipe"><%= link_to "New Recipe", new_recipe_path %> </div>
<% if @recipes.length > 0 %>
<div class = "recipe-container">
<% @recipes.each do |recipe|%>
<div class = "recipe-item">
  <div class = "recipe">
    <div class = "recipe-name">
      <%= recipe.name%>
    </div>
    <div class = "recipe-description">
      <%= recipe.description%>
    </div>
   </div>
   <div class = "wrapped-btns">
    <div class = "recipe-action">
      <%= button_to "Remove", recipe, method: :delete, class: "delete-btn"%>
    </div>

    <div class ="recipe-action">
      <%= link_to "Recipe Details ", recipe_path(recipe)%>
    </div>
    </div>
    </div>

<% end %>
</div>
	
<% else %>
  <div class ="empty-msg">
	<h2>There are no Recipes</h2>
  </div>
<% end %>
</div>

